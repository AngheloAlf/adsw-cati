extends layout

block content
  br
  br
  br
  .ui.one.column.center.aligned.page.grid
    .column.eight.wide
      h2.ui.teal.image.header
        img.image(src='static/cati.png')
        .content
          | Software CATI - Ingreso
      form.ui.large.form(action="", method="POST", onsubmit="return validate_login()")
        .ui.stacked.segment
          .field
            .ui.left.icon.input
              i.user.icon
              input#rut(name='rut', placeholder='12345678-9', type='text')
          .field
            .ui.left.icon.input
              i.lock.icon
              input#password(name='password', placeholder='Clave', type='password')
          button.ui.fluid.large.teal.submit.button Entrar
        .ui.error.message
       p(id='error' style='color:red;') #{error}
