extends layout

block content
    body.callcenter
        div.subcenter
            br
            div.ui.segment.centered.transwhite
                h1 Bienvenido admin #{nombre}
                form(action='/', method='POST')
                    button.ui.secondary.button(name='submitButton', value='log_out') Cerrar sesión
                    a.ui.primary.button(href='/admin') Volver al menú
                br
            div.ui.segment.centered.transgray
                h2 Agregar cliente
                form(action='/admin', method='POST')
                    div.ui.labeled.input.w35
                        div.ui.label Nombre
                        input#clientName(type='text', name='clientName', required='')
                    i.icon.category
                    div.ui.labeled.input.w35
                        div.ui.label E-Mail
                        input#clientMail(type='email', name='clientMail', required='')
                    br
                    br
                    button.ui.secondary.button(name='submitButton', value='createClient') Agregar cliente
                    br
