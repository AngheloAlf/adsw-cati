extends layout

block content
    body.callcenter.subcenter
        br
        div.ui.segment.centered.transwhite
            h1 Admin #{nombre} - Creación de Proyectos
            form(action='/', method='POST')
                button.ui.secondary.button(name='submitButton', value='log_out') Cerrar sesión
                a.ui.primary.button(href='/admin') Volver al menú
            br
        div.ui.segment.centered.transgray
            h3 Crear Proyecto
            div(ng-app='getClient', ng-controller='getClientCtrl')
                form(action='/admin', method='POST')
                    div.ui.labeled.input
                        div.ui.label Nombre de Proyecto
                        input.transwhite#proyectName(type='text', name='projectName', required='')
                    i.icon.category
                    div.ui.labeled.input
                        div.ui.label Cliente
                        select#proyectClient(name='projectClient', required='')
                            option(ng-repeat="client in clientsList" value="{{client.id_client}}") {{client.name}}
                    br
                    br
                    div.ui.labeled.input
                        div.ui.label Fecha de Inicio
                        input.transwhite#proyectStart(type='date', name='projectStart', required='')
                    i.icon.category
                    div.ui.labeled.input
                        div.ui.label Fecha de Termino
                        input.transwhite#proyectEnd(type='date', name='projectEnd', required='')
                    br
                    br

                    div.ui.labeled.input
                        div.ui.label Enlace a Encuesta
                        input.transwhite#proyectUrl(type='text', name='projectUrl', required='')
                    br
                    a(target='_blank' href="https://es.surveymonkey.com/create/?ut_source=test_home_intl") Crear una encueta
                    br
                    br
                    button.ui.primary.button(name='submitButton', value='createProject') Crear proyecto
                    br

    script(src='/angular/createProject.js')
